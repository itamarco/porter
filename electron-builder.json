{
  "appId": "com.porter.app",
  "productName": "Porter",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json",
    "!dist-electron/**/__tests__/**",
    "!dist-electron/**/*.test.js",
    "!dist-electron/__tests__/**"
  ],
  "extraResources": [
    {
      "from": "electron/resources/bin",
      "to": "bin"
    }
  ],
  "extraMetadata": {
    "main": "dist-electron/main.js"
  },
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "dmg": {
    "title": "${productName}-${version}"
  }
}

